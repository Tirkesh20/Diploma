<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/compass"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/btReadings2"
        android:layout_width="106dp"
        android:layout_height="34dp"
        android:background="@drawable/input_design"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/btReadingsText2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.715" />

    <TextView
        android:id="@+id/btReadingsText2"
        android:layout_width="208dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/input_design"
        android:text=" Направление ветра:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.716" />

    <Button
        android:id="@+id/gpsAct"
        android:layout_width="129dp"
        android:layout_height="52dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="588dp"
        android:text="GPS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/mainMenu"
        android:layout_width="130dp"
        android:layout_height="52dp"
        android:layout_marginTop="588dp"
        android:layout_marginEnd="36dp"
        android:text="Главное меню"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/btReadingsText"
        android:layout_width="204dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/input_design"
        android:text=" Скорость  ветра:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btReadingsText2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/btReadings"
        android:layout_width="105dp"
        android:layout_height="36dp"
        android:background="@drawable/input_design"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btReadings2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toEndOf="@+id/btReadingsText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="216dp"
        android:layout_height="285dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="91dp"
        app:layout_constraintBottom_toTopOf="@+id/btReadings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.375"
        app:srcCompat="@drawable/stk"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>