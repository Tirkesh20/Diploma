<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">


    <TextView
        android:id="@+id/text1"
        android:layout_width="321dp"
        android:layout_height="180dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:text="This application was created for monitoring characteristic of sailing vessel
(wind speed,wind direction,gps,Beaufort scale) in  \n
 live for getting better experience \n while on the water"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/get_app"
        android:layout_width="143dp"
        android:layout_height="56dp"
        android:layout_marginTop="428dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="@string/applink"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="149dp"
        android:layout_height="54dp"
        android:layout_marginTop="428dp"
        android:layout_marginEnd="176dp"
        android:ellipsize="end"
        android:text="Link for source code"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/aught"
        android:layout_width="310dp"
        android:layout_height="54dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:text="Developed by: Yagshymyradov Tirkesh"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="319dp"
        android:layout_height="71dp"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:text="Password for connecting Bluetooth device:1234"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/year"
        android:layout_width="176dp"
        android:layout_height="52dp"
        android:layout_marginTop="592dp"
        android:layout_marginEnd="80dp"
        android:ellipsize="end"
        android:text="Minsk 2023"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back"
        android:layout_width="129dp"
        android:layout_height="52dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="44dp"
        android:text="@string/back"
        android:background="@drawable/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>